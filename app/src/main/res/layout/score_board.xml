<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".ScoresBoard">

    <LinearLayout
        android:id="@+id/hong"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WINNER"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/hongw"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@color/red"
            android:textColor="@color/black"
            android:textSize="50sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/new_game2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEW GAME"
            android:textColor="@color/blue"
            android:textSize="30sp"
            android:layout_marginTop="50dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/chang"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WINNER"
                android:textAlignment="center"
                android:textStyle="italic|bold"
                android:textColor="@color/black"
                android:textSize="30sp"/>

        <TextView
            android:id="@+id/changw"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:textColor="@color/black"
            android:textSize="50sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/new_game1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEW GAME"
            android:textColor="@color/blue"
            android:textSize="30sp"
            android:layout_marginTop="50dp"/>
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/main"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scores Board"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/round_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Start"
                android:textAlignment="center"
                android:textStyle="bold|normal"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/timer_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="1"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/playerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="Player1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/teama"
            android:layout_width="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="0"
            android:background="@color/blue"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/teamb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="0"
            android:background="@color/red"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/playerh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="Player2"
            android:layout_weight="1"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Points"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMA1"
                android:layout_width="65dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:onClick="teama1"
                android:background="@drawable/punch2"
                android:layout_height="60dp"
                android:text="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMA2"
                android:onClick="teama2"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/hogob"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMA3"
                android:layout_width="63dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginRight="4dp"
                android:background="@drawable/headb"
                android:onClick="teama3"
                android:layout_height="60dp"
                android:text="3"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMB1"
                android:layout_width="63dp"
                android:onClick="teamb1"
                android:background="@drawable/punch2"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMB2"
                android:layout_width="65dp"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@drawable/hogo"
                android:onClick="teamb2"
                android:layout_height="60dp"
                android:text="2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMB3"
                android:layout_width="65dp"
                android:background="@drawable/headr"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_height="60dp"
                android:onClick="teamb3"
                android:layout_weight="1"
                android:text="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMA4"
                android:layout_width="90dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:onClick="teama4"
                android:background="@drawable/hogob"
                android:layout_height="70dp"
                android:text="4"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMA5"
                android:layout_width="90dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginRight="12dp"
                android:background="@drawable/headb"
                android:onClick="teama5"
                android:layout_height="70dp"
                android:text="5"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMB4"
                android:layout_width="90dp"
                android:onClick="teamb4"
                android:background="@drawable/hogo"
                android:layout_marginRight="8dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="4"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TEAMB5"
                android:layout_width="90dp"
                android:background="@drawable/headr"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_marginRight="0dp"
                android:layout_height="70dp"
                android:onClick="teamb5"
                android:layout_weight="1"
                android:text="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:text="Kamjang"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/play1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Player 1"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/player1"
                        android:layout_width="40dp"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@color/blue"

                        android:text="0" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kamjang"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/play12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Player 2"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/player2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="25sp"

                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/end_game"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:textSize="25sp"
            android:text="END GAME"/>



        </LinearLayout>

    </ScrollView>


</LinearLayout>